{
  "compilerOptions": {
    /* Base Options: */
    "baseUrl": "src",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "skipLibCheck": true,
    "target": "es2022",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@customTypes/*": ["./types/*"],
      "@stores/*": ["./stores/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*"]
}
